<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>
<% if current_user %>
  <% if current_user.cats.pluck(:id).include?(@cat.id) %>
    <%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>
  <% else%>
    <%= link_to "Rent #{@cat.name}", new_cat_rental_request_url%>
  <% end %>
<% end %>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Requester</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order("start_date").each do |req| %>
    <%= render "req_tr", req: req %>
  <% end %>
</table>
