<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <h3>Hello <%= current_user.email %>!</h3>
      <br>
      <%= link_to "Back to all Bands", bands_url  %>
      <br>
    <% else %>
      <%= link_to "Sign In", new_sessions_url %>
      <br>
      <%= link_to "Sign Up", new_user_url %>
      <br>
    <% end %>
    <%= flash[:error] %>
    <%= flash[:errors].join("\n") if flash[:errors] %>
    <%= yield %>
  </body>

  <footer>
    <% if current_user %>
      <%= button_to "Sign Out", sessions_url, method: :delete %>
    <% end %>
  </footer>
</html>
